@using Eshop.Domain.Dtos.Site.Banner
@using Eshop.Domain.Entities.Site
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Eshop.Domain.Dtos.Site.Banner.EditBannerDto

@{
    ViewData["Title"] = "ویرایش بنر";
}



@section scripts
{
    <partial name="_AdminJqueryValidators" />

}

<div class="row pt-2 pb-2">
    <div class="col-sm-9">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Administration" asp-controller="Home" asp-action="Index">داشبورد</a></li>
            <li class="breadcrumb-item"><a href="javaScript:void();">مدیریت تصاویر</a></li>
            <li class="breadcrumb-item"><a href="javaScript:void();">@ViewData["Title"]</a></li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header"><i class="fa fa-edit"></i> @ViewData["Title"]</div>
            <div class="card-body">

                <form asp-area="Administration" asp-controller="Image" asp-action="EditBanner" method="post" enctype="multipart/form-data" id="filter-form">
                    <input type="hidden" asp-for="Id" />
                    <div class="row">
                        <div class="form-group col-lg-12">
                            <label>توضیحات</label>
                            <textarea asp-for="Description" class="form-control" rows="10"></textarea>
                            <span class="text-danger float-right" asp-validation-for="Description"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-6">
                            <label>موقعیت بنر</label>
                            <select class="form-control" asp-for="Placement" asp-items="@Html.GetEnumSelectList<EditBannerDto.BannerPlacement>()">
                                <option value="0">موقعیت بنر را انتخاب نمایید...</option>
                            </select>
                            <span class="text-danger float-right" asp-validation-for="Placement"></span>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>آدرس لینک</label>
                            <input class="form-control" asp-for="Url" />
                            <span class="text-danger float-right" asp-validation-for="Url"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-12">
                            <label>سایز بنر</label>
                            <input class="form-control" asp-for="ColSize" />
                            <span class="text-danger float-right" asp-validation-for="ColSize"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-12">
                            <label>آپلود تصویر</label>
                            <input type="file" name="bannerImage" class="form-control" accept=".png, .jpeg, .jpg" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-warning btn-block">ویرایش بنر</button>
                </form>
            </div>
        </div>
    </div>
</div>






