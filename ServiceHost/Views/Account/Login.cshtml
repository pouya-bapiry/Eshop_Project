@model Eshop.Domain.Dtos.Account.LoginUserDto
@using Eshop.Domain.Dtos.Site


@{
	ViewData["Title"] = "ورود کاربر";
}

@section script {
	<partial name="_JqueryValidators" />
	<partial name="_Captchascript" />
}

<section class="content vh-100">
	<div class="container-fluid h-100">
		<div class="auth h-100 d-flex align-items-center">
			<div class="container-fluid">
				<div class="auth-items">
					<div class="row justify-content-center">
						<div class="col-lg-4">
							<div class="auth-form shadow-xl rounded-3  mt-5 bg-white">
								<div class="auth-form-title header-logo d-flex align-items-center justify-content-between title-panel mb-4 slider-title-desc-center">
									<h2 class="text-center h4 text-muted title-font"> ورود کاربر</h2>
									<a href="">
										<img src="~/MainTemplate/assets/image/logo.png" class="auth-logo" alt="">
									</a>
								</div>
								<form class="py-3" asp-area="" asp-controller="Account" asp-action="Login" method="post">
									<partial name="_CaptchaInput" model="@(new CaptchaDto())" />

									<div class="comment-item mb-4">
										<input type="text" asp-for="Mobile" class="form-control">
										<label class="form-label label-float">
											شماره همراه
											<span class="text-danger">*</span>
											<span asp-validation-for="Mobile" class="text-danger"></span>
										</label>
									</div>
									<div class="comment-item mb-4 position-relative step-passwd" style="">
										<input type="password" asp-for="Password" class="form-control">
										<label class="form-label label-float">
											رمز عبور
											<span class="text-danger">*</span>
											<span asp-validation-for="Password" class="text-danger"></span>
										</label>
										<div class="inline-btn-text">
											<a asp-controller="Account" asp-action="RecoverPassword" class="btn border-0 main-color-three-bg text-white">
												فراموشی رمز عبور
											</a>
										</div>
									</div>
									<div class="text-center">
										<button type="submit" class="btn main-color-two-bg text-white w-100 mb-2 py-3">ورود به سایت</button>
									</div>
									<div class="text-center">
										<a asp-controller="Account" asp-action="RegisterUser" class="btn main-color-three-bg text-white w-100 py-3">حساب کاربری ندارید؟ ثبت نام</a>
									</div>
								</form>

							</div>
							<p class="loginTermsDesc lh-lg mt-3">
								با ورود و یا ثبت نام در بوکان آنلاین شما <a class="underlined fw-bold" href="/rules/">
									شرایط و
									قوانین
								</a> استفاده از سرویس‌های سایت سایت و <a class="underlined fw-bold" href="/privacy-polices/">
									قوانین حریم
									خصوصی
								</a> آن را می‌پذیرید.
							</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>